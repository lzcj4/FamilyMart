<Window x:Class="FamilyMartUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:FamilyMartUI.UC"
        Title="MainWindow" Height="800" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <uc:UCReportParser Grid.Column="0" x:Name="ucParser"  />
            <uc:UCQuery   Grid.Column="1" x:Name="ucQuery"/>
        </Grid>

        <uc:MyCanvas  Grid.Column="1" Margin="0,0,10,0"  x:Name="ucChart" />
        <uc:UCReport ContentView="{Binding ContentView}" DataContext="{Binding DialyViewModel}" 
                     Grid.Column="0" Grid.Row="1"  x:Name="ucDialyReport" Margin="5"/>
        <uc:UCDetail ContentView="{Binding ContentView}"  DataContext="{Binding DetailViewModel}"
                     Grid.Column="1" Grid.Row="1" Margin="5"/>
    </Grid>
</Window>
