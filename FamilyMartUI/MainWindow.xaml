<Window x:Class="FamilyMartUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:FamilyMartUI.UC"
        Title="MainWindow" Height="800" Width="1600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <uc:UCReportParser  Grid.Column="0" Grid.Row="0"  Margin="100,5" x:Name="ucParser"/>
        <uc:UCChart  Grid.Column="1" Grid.Row="0"  Margin="100,5" Width="400" Height="200" />
        <uc:UCReport ContentView="{Binding ContentView}" DataContext="{Binding DialyViewModel}"  Grid.Column="0" Grid.Row="1"  x:Name="ucDialyReport"/>
        <uc:UCDetail ContentView="{Binding ContentView}"  DataContext="{Binding DetailViewModel}" Grid.Column="1"  Grid.Row="1"/>
    </Grid>
</Window>
